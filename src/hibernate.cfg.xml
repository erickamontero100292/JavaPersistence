<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
<session-factory>
	<property name="connection.driver_class">com.mysql.jdbc.Driver</property>
	<property name="connection.url">jdbc:mysql://localhost:3306/test_bd</property>
	<property name="connection.username">root</property>
	<property name="connection.password"></property>
	
	<property name="dialect">org.hibernate.dialect.MySQLDialect</property><!-- dialecto SQL -->
	<property name="show_sql">true</property><!-- muestra las operaciones en consola -->
	<!--  <mapping resource="com/curso/domain/Tramite.hbm.xml"></mapping>--><!-- mapping basado en XML -->
	<mapping  class="com.curso.domain.Tramite"></mapping>
	<mapping  class="com.curso.domain.Avaluo"></mapping>
	<mapping  class="com.curso.domain.DiarioCliente"></mapping>
</session-factory>

</hibernate-configuration>